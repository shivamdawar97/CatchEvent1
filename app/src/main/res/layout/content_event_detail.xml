<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailcontent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="dawar.catchevent.EventClasses.EventDetail"
    tools:showIn="@layout/activity_event_detail">



    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollbarAlwaysDrawVerticalTrack="true">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:onClick="enlargeIt"
                android:layout_height="169dp"
                android:background="#f2f2f2"
                android:scaleType="centerCrop"
                android:contentDescription="@string/event_image"
                />

            <TextView
                android:id="@+id/event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:text="Name"
                android:layout_marginTop="20dp"
                android:textColor="@color/cardview_dark_background"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/RegistrationFee"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:text="fee" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d9d9d9"
                />
            <TextView
                android:id="@+id/Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="22sp"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d9d9d9"
                />
            <TextView
                android:id="@+id/Timings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginStart="10dp"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d9d9d9"
                />
            <TextView
                android:id="@+id/event_venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginStart="10dp"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d9d9d9"
                />

            <TextView
                android:id="@+id/prize_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginStart="10dp"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="Description"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/cardview_dark_background"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:autoLink="all"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/results_layout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="#f2f2f2"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:text="Results"/>
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First     :"
                        android:textSize="25sp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rs_fst"
                        android:focusedByDefault="false"
                        android:hint="In progress"/>


                </GridLayout>
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Second:"
                        android:textSize="25sp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusedByDefault="false"

                        android:id="@+id/rs_snd"
                        android:hint="In progress"/>

                </GridLayout>
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Third    :"

                        android:textSize="25sp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusedByDefault="false"
                        android:id="@+id/rs_thd"
                        android:hint="In progress"/>


                </GridLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Update Results"
                    android:onClick="updateResults"
                    android:id="@+id/rs_bttn"/>
            </LinearLayout>


            <Button
                android:id="@+id/gal_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/trans2"
                android:drawableLeft="@drawable/ic_image_black_24dp"
                android:drawablePadding="0dp"
                android:onClick="showGallery"
                android:text="Gallery"
                android:textAlignment="textStart"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/gal_btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/trans2"
                android:drawablePadding="0dp"
                android:onClick="showGallery"
                android:text="Alerts"
                android:drawableLeft="@android:drawable/star_big_off"
                android:textAlignment="textStart"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />


        </LinearLayout>


    </ScrollView>


</android.support.constraint.ConstraintLayout>
